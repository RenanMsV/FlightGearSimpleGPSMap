<PropertyList>
	<path>GPS.ac</path>
	<animation>
		<type>noshadow</type>
		<object-name>FGBR_GPS_SCREEN</object-name>
		<object-name>FGBR_GPS_SCREEN_OFF</object-name>
		<object-name>Button_AddZoom</object-name>
		<object-name>Button_RemZoom</object-name>
		<object-name>Button_AddBright</object-name>
		<object-name>Button_RemBright</object-name>
	</animation>
	<animation>
		<type>range</type>
		<min-m>0</min-m>
		<max-m>30</max-m>
	</animation>
	<animation>
		<type>scale</type>
		<x-offset>0.8</x-offset>
		<y-offset>0.8</y-offset>
		<z-offset>0.8</z-offset>
	</animation>
	<animation>
		<type>shader</type>
		<shader>chrome</shader>
		<!--texture>Aircraft/Generic/Effects/glass_shader.png</texture-->
		<texture>textures/glass.png</texture>
		<object-name>FGBR_GPS_SCREEN_OFF</object-name>
	</animation>
	<animation>
		<type>pick</type>
		<object-name>Button_AddZoom</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>nasal</command>
				<script>gps.changeZoom(1);</script>
			</binding>
		</action>
	</animation>
	<animation>
		<type>pick</type>
		<object-name>Button_RemZoom</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>nasal</command>
				<script>gps.changeZoom(-1);</script>
			</binding>
		</action>
	</animation>
	<animation>
		<type>pick</type>
		<object-name>Button_AddBright</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>nasal</command>
				<script>gps.changeBright(0.1);</script>
			</binding>
		</action>
	</animation>
	<animation>
		<type>pick</type>
		<object-name>Button_RemBright</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>nasal</command>
				<script>gps.changeBright(-0.1);</script>
			</binding>
		</action>
	</animation>
	<animation>
		<type>pick</type>
		<object-name>Button_ChangeType</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>nasal</command>
				<script>gps.changeType();</script>
			</binding>
		</action>
	</animation>
	<animation> 
		<type>material</type> 
		<object-name>FGBR_GPS_SCREEN</object-name>
		<property-base>/instrumentation/GPSMap/eletric</property-base>
		<emission>
			<red>1.0</red>
			<green>1.0</green>
			<blue>1.0</blue>
			<factor-prop>/instrumentation/GPSMap/bright</factor-prop>
		</emission>
	</animation>
	<animation>
		<type>pick</type>
		<object-name>Button_Off</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-assign</command>
				<property>/instrumentation/GPSMap/eletric</property>
				<value>1</value>
			</binding>
		</action>
	</animation>
	<animation>
		<type>pick</type>
		<object-name>Button_On</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-assign</command>
				<property>/instrumentation/GPSMap/eletric</property>
				<value>0</value>
			</binding>
		</action>
	</animation>
	<animation>
		<object-name>FGBR_GPS_SCREEN</object-name>
		<object-name>Button_AddZoom</object-name>
		<object-name>Button_RemZoom</object-name>
		<object-name>Button_AddBright</object-name>
		<object-name>Button_RemBright</object-name>
		<object-name>Button_ChangeType</object-name>
		<object-name>Button_On</object-name>
		<type>select</type>
		<condition>
			<property>/instrumentation/GPSMap/eletric</property>
		</condition>
	</animation>
	<animation>
		<object-name>FGBR_GPS_SCREEN_OFF</object-name>
		<object-name>Button_Off</object-name>
		<type>select</type>
		<condition>
			<not>
				<property>/instrumentation/GPSMap/eletric</property>
			</not>
		</condition>
	</animation>
</PropertyList>